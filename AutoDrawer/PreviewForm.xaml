<Window x:Class="AutoDrawer.PreviewForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoDrawer"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="CanMinimize"
        Title="PreviewForm" Height="100" Width="300"
        Topmost="True">

    <Grid Background="#7F2C302E">
        <Image x:Name="pictureBox1" Margin="0,22,0,0"/>
        <Label Content="Shift to Draw, ALT to stop, CTRL to lock last pos" HorizontalAlignment="Center" VerticalAlignment="Top" Height="21" Width="300" Foreground="White" Padding="5,0,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
    </Grid>
</Window>
